class Solution {
    public boolean isPowerOfTwo(int n) {
        boolean ans = false;
        if(n==1){
            ans = true;
        }
        else{
            for(int i=0; i<32; i++){
                if(Math.pow(2,i)==n){
                    ans = true;
                }
            }
        }
        return ans;

    }
}
